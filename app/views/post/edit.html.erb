<div class="modal-dialog text-center">
  <div class="col-sm-8 main-section">
    <div class="modal-content">

<%= form_for @post do |form| %>
<div class="form-group">
  <div class="field">
    <%= form.hidden_field :id, id: :post_id,class: 'form-control hidden'%>
  </div>
</div>

<div class="form-group">
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :post_name ,class: 'form-control'%>
  </div>
</div>

<div class="form-group">
  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, id: :post_description,class: 'form-control' %>
  </div>
</div>

<div class="form-group">
  <div class="field">
    <%= form.label :image %>
    <%= form.file_field :image, id: :post_image,class: 'form-control' %>
  </div>
</div>
<br>
<br>
<div class="col-12 forgot">
  <div class="actions">
    <%= form.submit %>
  </div>
  </div>
<% end %>

</div>
</div>
</div>
